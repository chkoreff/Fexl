#
\neg=(- 0)
\max=(\x\y gt x y x y)
\min=(\x\y lt x y x y)

# Compute x modulo n.
\mod=(\x\n - x; * n; trunc; / x n)

\tau=(* 2 pi)

\round2=(\x / (round (* 100 x)) 100)

# Greatest common denominator for non-negative numbers.
\bn_gcd=
	(@\\bn_gcd\a\b
	bn_eq0 a b;
	bn_eq0 b a;
	bn_lt a b
		(bn_gcd a (bn_mod b a))
		(bn_gcd b (bn_mod a b))
	)

def "neg" neg;
def "max" max;
def "min" min;
def "mod" mod;
def "tau" tau;
def "round2" round2;
def "bn_gcd" bn_gcd;
std
