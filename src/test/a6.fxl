#
evaluate (use "test.fxl" standard) \;

\parse=
	(\type\source
	say "(parsing)"
	\form=
		(
		eq type "file" (parse_file (path_under dir_local source));
		eq type "string" (parse source "");
		eq type "stream" (parse source "");
		void
		)
	say "(resolving)"
	resolve standard form
	)

\parse=
	(\type\source
	say "["
	parse type source \f
	say "]"
	yield f
	)

\do_test=
	(\parse
	div
	parse \f
	f
	f
	)

\test_1==(do_test; parse "file" "hello.fxl")
\test_2==(do_test; parse "string" ~ say "HI"~)
\test_3==
(
div
\program=
~
say ["x = " (+ 3 4)]
~
\get=(readstr program)
parse "stream" get \fn
say "got it"
fn
)

test_1
test_2
test_3
