# Test reading CSV and SSV data.
evaluate
(
use_lib "read_csv.fxl";
use_lib "read_ssv.fxl";
standard
) \;

\try_chars=
	(\read\in
	\rows=(read in)
	put_list rows
	)

\try_file=
	(\read\name
	\rows=(read (path_under dir_local name))
	put_list rows
	)

\test_csv==
(
say "== test_csv"

(
\try=(try_chars read_csv_chars)
try []
try
[
" " "-" "1" "1" "." "3" "6" "," "1" "2" CR LF
"2" "1" "," "2" "2" CR LF
"3" "1" "," "3" "2" LF
"4" "1" "," "4" "2" "," "," "," CR
"5" "1" "," "5" "2" LF
CR # blank row
"a" " " "b" "," "c" "d" CR LF

QU "a" "b" " " "c" QU QU "h" "i" QU QU QU ","
QU "3" "." "1" "4" QU  # not converted to number
LF

LF # blank row
"6" LF
"3" "3" # no terminating LF
]

try ["x" LF]
)

(
\try=(try_chars read_csv_string)

try
~
12,3,,4
5,6,7

"a b
""hi""
cd","3.14",-48.7
"abc,def""ghi""jklmnopqrstuvwxyz"

    
~
)

(
\try=(try_file read_csv_file)
try "test.csv"
)
)

\test_ssv==
