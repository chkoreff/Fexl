# Echo the characters from the input.
\echo=
	(\get @\loop
	\ch=get
	is_undef ch ();
	eq (ord ch) 4 ();
	say ["ch = "(unpack ch)]
	loop
	)

\interact==
	(
	set_alarm 20
	say "Press Ctrl-D to stop."
	echo (fget stdin)
	say "DONE"
	)

say "Press some keys and I'll show you what you typed."
receive_keystrokes interact

say "Enter some lines of input and I'll show you what you typed."
interact
