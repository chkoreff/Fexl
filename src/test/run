#!/bin/sh
./build || exit

run_fexl()
	{
	echo "===="
	../bin/fexl 2>&1 >/dev/null
	echo "exit $?"
	}

echo "===="
../bin/fexl test/a1.fxl
echo "exit $?"

echo "===="
(
cat <<"EOF"
abc
defg

hij
EOF
) | ../bin/fexl test/a2.fxl
echo "exit $?"

(
cat <<"EOF"
say "hello"
put_to_error
	(
	\x=(+ 4 3)
	say "This goes to stderr."
	put "x = " put x nl
	)
say "bye"
EOF
) | run_fexl

echo -n "\"" | run_fexl

echo -n '
"a
b' | run_fexl

echo -n "~| a" | run_fexl

echo -n "

~END
abcEN" | run_fexl


echo -n "~" | run_fexl

echo -n "~
" | run_fexl

echo -n "~EN" | run_fexl

echo -n " = y" | run_fexl

echo -n "ab cd e\\" | run_fexl

echo -n "\\x=" | run_fexl

echo -n "(
a
(b" | run_fexl

echo -n "(
a
(b)" | run_fexl

echo -n "(ab cd e)
)" | run_fexl

echo -n "x
y
	(z z y)
" | run_fexl

echo -n "{
{ab
cd {} e
" | run_fexl

(
cat <<"EOF"
\form={a b
c}
resolve form (\x eq x "b" [(say "b")] [])
EOF
) | run_fexl

echo "===="
../bin/fexl 2>&1 missing.fxl
echo "exit $?"

# Here we test setting ulimit to terminate misbehaving programs promptly.
test_misbehavior=false
# To enable the test, unpound the next line.
#test_misbehavior=true

if $test_misbehavior; then

(
ulimit -St 1
echo -n "@ I" | run_fexl
# CPU time limit exceeded
) 2>&1

(
ulimit -Ss 1000
echo -n "@ @" | run_fexl
# Stack overflow (Segmentation fault)
) 2>&1

(
ulimit -Sv 200000
echo -n "\S=(\x\y\z x z; y z) @ S S S" | run_fexl
# The program ran out of memory.
) 2>&1

fi

exit 0
