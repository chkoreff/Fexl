#
\=(use "test/lib.fxl")
\suffix=(\n eq n 1 "" "s")
\bottles_of_beer=(\n put [n " " "bottle" (suffix n) " of beer"])
\on_the_wall=(say " on the wall")

\sing=
	(\n
	each (range n 1) \n
	bottles_of_beer n on_the_wall
	bottles_of_beer n nl
	say "Take one down, pass it around"
	\n=(- n 1)
	bottles_of_beer n on_the_wall nl
	)
sing 3
